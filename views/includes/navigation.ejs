<!-- 🎨 Fond pour l'interface utilisateur -->
<div class="backdrop"></div>

<!-- 🏷️ En-tête principal -->
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  
  <!-- 🌐 Navigation principale -->
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item main-header__title">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">Mon Magasin</a>
      </li>
      <% if (isAuthenticated && isAdmin) { %>
        <li class="main-header__item">
          <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Gérer les Produits</a>
        </li>
      <% } %>
    </ul>
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= path === '/about' ? 'active' : '' %>" href="/about">À Propos</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/contact' ? 'active' : '' %>" href="/contact">Contact</a>
      </li>
      <% if (!isAuthenticated) { %>
        <li class="main-header__item">
          <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Inscription</a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Connexion</a>
        </li>
      <% } else { %>
        <li class="main-header__item">
          <a class="<%= path === '/mypage' ? 'active' : '' %>" href="/mypage">Ma Page</a>
        </li>
        <li class="main-header__item">
          <form action="/logout" method="post" class="logout-form">
            <button type="submit" class="logout-button">Déconnexion</button>
          </form>
        </li>
        <li class="main-header__item">
          <a href="/cart" class="cart-link" uk-tooltip="title: Voir les articles du panier" uk-icon="icon: cart"></a>
        </li>
      <% } %>
    </ul>
  </nav>
</header>

<!-- 📱 Navigation mobile -->
<nav class="mobile-nav">
  <ul class="mobile-nav__item-list">
    <li class="mobile-nav__item">
      <a class="<%= path === '/' ? 'active' : '' %>" href="/">Accueil</a>
    </li>
    <% if (isAuthenticated) { %>
      <li class="mobile-nav__item">
        <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Panier</a>
      </li>
      <% if (isAdmin) { %>
        <li class="mobile-nav__item">
          <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Gérer les Produits</a>
        </li>
      <% } %>
      <li class="mobile-nav__item">
        <a class="<%= path === '/mypage' ? 'active' : '' %>" href="/mypage">Ma Page</a>
      </li>
      <li class="mobile-nav__item">
        <form action="/logout" method="post" class="mobile-logout-form">
          <button type="submit" class="mobile-logout-button">Déconnexion</button>
        </form>
      </li>
    <% } else { %>
      <li class="mobile-nav__item">
        <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Connexion</a>
      </li>
      <li class="mobile-nav__item">
        <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Inscription</a>
      </li>
    <% } %>
  </ul>
</nav>
